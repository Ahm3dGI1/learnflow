# ====================
# CLIENT CONFIG
# ====================
# Firebase Authentication Configuration
# Get these values from Firebase Console > Project Settings > General
REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_PROJECT_ID=
REACT_APP_FIREBASE_STORAGE_BUCKET=
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=
REACT_APP_FIREBASE_APP_ID=


# ====================
# SERVER CONFIG
# ====================

# Flask Server Configuration
PORT=5000
FLASK_ENV=development

# Database Configuration
# For SQLite (development): sqlite:///./learnflow.db
# For PostgreSQL (production): postgresql://user:password@localhost:5432/learnflow
DATABASE_URL=sqlite:///./learnflow.db
SQL_ECHO=True

# Google Gemini AI Configuration (REQUIRED)
# Get API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL_NAME=learnlm-2.0-flash-experimental

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000